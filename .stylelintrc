{
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "./sass/styles/generic/normalize.scss"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "at-root",
        "each",
        "else",
        "extend",
        "for",
        "function",
        "if",
        "include",
        "mixin",
        "return",
        "warn"
      ]
    }],
    "no-empty-source": false
  }
}
